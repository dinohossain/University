<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context="com.dating.app.idateu.SecondSignUpPage">

    <TextView
        android:id="@+id/warning_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Hold up!"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tap_here_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/tick_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tap_here_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-34dp"
        android:text="Tap here if you are over 18" />

    <Button
        android:id="@+id/Continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/full_length_button"
        android:backgroundTint="@color/transparent_black"
        android:text="Continue"
        android:textColor="@color/white" />


    </RelativeLayout>
