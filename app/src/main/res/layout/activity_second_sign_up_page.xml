<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context="com.dating.app.idateu.SignUp_LogIn.SecondSignUpPage">

    <TextView
        android:id="@+id/warning_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="Hold up!"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <CheckBox
        android:id="@+id/tick_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning_txt"
        android:layout_alignStart="@id/warning_txt"
        android:layout_marginStart="-52dp"
        android:layout_marginTop="47dp"
        android:layout_marginRight="2dp"
        android:buttonTint="@color/white"/>

    <TextView
        android:id="@+id/tap_here_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning_txt"
        android:layout_alignBaseline="@id/tick_box"
        android:layout_marginTop="48dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/tick_box"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Tap here if you are over 18" />

    <Button
        android:id="@+id/Continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/full_length_button"
        android:backgroundTint="@color/transparent_black"
        android:text="Continue"
        android:textColor="@color/white" />

</RelativeLayout>