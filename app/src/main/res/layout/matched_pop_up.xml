<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple"
    android:padding="5dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/matched_pop_up_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/mName_pop_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/matched_pop_up_img"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="name"/>

    <TextView
        android:id="@+id/dob_pop_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mName_pop_txt"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Date of Birth:"/>

    <TextView
        android:id="@+id/orientation_pop_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dob_pop_txt"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Orientation:"/>

</RelativeLayout>